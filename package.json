{
  "name": "frontporch",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@frontporch/web",
    "dev:mobile": "turbo dev --filter=@frontporch/mobile",
    "build:web": "turbo build --filter=@frontporch/web",
    "build:mobile": "turbo build --filter=@frontporch/mobile",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "turbo": "^2.3.0"
  },
  "overrides": {
    "react-dom": "18.2.0"
  },
  "packageManager": "npm@10.2.0"
}
