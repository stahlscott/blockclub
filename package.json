{
  "name": "blockclub",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@blockclub/web",
    "dev:mobile": "turbo dev --filter=@blockclub/mobile",
    "build:web": "turbo build --filter=@blockclub/web",
    "build:mobile": "turbo build --filter=@blockclub/mobile",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:coverage": "turbo test:coverage"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "turbo": "^2.3.0"
  },
  "overrides": {
    "react-dom": "18.2.0"
  },
  "packageManager": "npm@10.2.0"
}
